{
  "manifest_version": 3,
  "name": "Human Reader, powered by ElevenLabs",
  "version": "1.1",
  "description": "Let the web speak like a human. A simple extension that uses the elevenlabs.io API to convert any text to speech.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/play.svg",
        "images/stop.svg",
        "images/spinner.svg",
        "media/error-no-api-key.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage"]
}
